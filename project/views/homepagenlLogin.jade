    .row
      .medium-8.columns
        p
          img(src='http://media.salon.com/2014/10/archie_comics.jpg', alt='main comic')
      .medium-4.columns
        p
          img(src='https://s-media-cache-ak0.pinimg.com/originals/2c/3f/d5/2c3fd5b729c1ff805637212f284ad29b.jpg', alt='random comic')
